{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "globals": {
            "type": "object",
            "metadata": {
                "Description": "Global complex object passed to nested templates"
            }
        },
        "vmName": {
            "type": "string",
            "metadata": {
                "Description": "The name of the VM to be created"
            }
        },
        "availabilitySet": {
            "type": "object",
            "metadata": {
                "Description": "Machine settings object"
            }
        },
        "hardwareProfile": {
            "type": "object",
            "metadata": {
                "Description": "Machine settings object"
            }
        },
        "osProfile": {
            "type": "object",
            "metadata": {
                "Description": "Machine settings object"
            }
        },
        "storageProfile": {
            "type": "object",
            "metadata": {
                "Description": "Machine settings object"
            }
        },
        "networkProfile": {
            "type": "object",
            "metadata": {
                "Description": "Machine settings object"
            }
        },
        "diagnosticsProfile": {
            "type": "object",
            "metadata": {
                "Description": "Machine settings object"
            }
        },
        "vmPlan": {
            "type": "object",
            "metadata": {
                "Description": "Machine settings object"
            }
        }
    },
    "variables": {
        "plan": "[parameters('VMPlan').plan]"
    },
    "resources": [
        {
            "name": "[parameters('vmName')]",
            "condition": "[equals(parameters('vmPlan').plan.name, 'none')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "[parameters('globals').apiVersion.virtualMachine]",
            "location": "[resourceGroup().location]",
            "properties": {
                "availabilitySet": "[parameters('availabilitySet')]",
                "hardwareProfile": "[parameters('hardwareProfile')]",
                "osProfile": "[parameters('osProfile')]",
                "storageProfile": "[parameters('storageProfile')]",
                "networkProfile": "[parameters('networkProfile')]",
                "diagnosticsProfile": "[parameters('diagnosticsProfile')]"
            }
        },
        {
            "name": "[parameters('vmName')]",
            "condition": "[not(equals(parameters('vmPlan').name, 'none'))]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "[parameters('globals').apiVersion.virtualMachine]",
            "location": "[resourceGroup().location]",
            "plan": "[parameters('vmPlan').plan]",
            "properties": {
                "availabilitySet": "[parameters('availabilitySet')]",
                "hardwareProfile": "[parameters('hardwareProfile')]",
                "osProfile": "[parameters('osProfile')]",
                "storageProfile": "[parameters('storageProfile')]",
                "networkProfile": "[parameters('networkProfile')]",
                "diagnosticsProfile": "[parameters('diagnosticsProfile')]"
            }
        }
    ]
}
