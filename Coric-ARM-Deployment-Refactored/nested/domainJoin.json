{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",

  "parameters": {
    "globals": {
      "metadata": {
        "Description": "Global complex object passed to nested templates"
      },
      "type": "object"
    },

    "vmName": {
      "metadata": {
        "Description": "The VM's name as shown in the portal - NOT the server's BIOS/hostname"
      },
      "type": "string"
    },

    "ouPath": {
      "type": "string",
      "metadata": {
        "Description": "Specifies an organizational unit (OU) for the domain account. Enter in LDAP format: OU=Drone; OU=Coric Server Roles"
      }
    },

    "domainJoinOptions": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "Set of bit flags that define the join options. Default value of 3 is a combination of NETSETUP_JOIN_DOMAIN (0x00000001) & NETSETUP_ACCT_CREATE (0x00000002) i.e. will join the domain and create the account on the domain. For more information see https://msdn.microsoft.com/en-us/library/aa392154(v=vs.85).aspx"
      }
    }
  },

  "variables": {
    "apostrophe": "'",
    "backslash": "\\"
  },

  "resources": [
    {
      "apiVersion": "[parameters('globals').apiVersion.extension]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
      ],
      "location": "[resourceGroup().location]",
      "name": "[concat(parameters('vmName'),'/domainJoin')]",
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.0",
        "settings": {
          "Name": "[parameters('globals').domainName]",
          "Options": "[parameters('domainJoinOptions')]",
          "OUPath": "[concat(variables('apostrophe'), parameters('ouPath'), parameters('globals').domainNameLDAP, variables('apostrophe'))]",
          "Restart": "true",
          "User": "[concat(parameters('globals').domainName, variables('backslash'), parameters('globals').domainAdminUsername)]"
        },
        "protectedsettings": {
          "Password": "[parameters('globals').domainAdminPassword]"
        }
      },
      "type": "Microsoft.Compute/virtualMachines/extensions"
    }
  ]
}