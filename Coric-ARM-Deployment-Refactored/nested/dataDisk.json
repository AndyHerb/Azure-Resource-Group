{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",

  "parameters": {
    "globals": {
      "metadata": {
        "Description": "Global complex object passed to nested templates"
      },
      "type": "object"
    },

    "vmName": {
      "metadata": {
        "Description": "The VM's name as shown in the portal - NOT the server's BIOS/hostname"
      },
      "type": "string"
    },

    "storageAccount": {
      "metadata": {
        "Description": "The storage account in which the vhd should be placed"
      },
      "type": "string"
    },

    "sizeOfDataDiskInGB": {
      "metadata": {
        "Description": "Size of the Data Disk in GB"
      },
      "type": "int",
      "defaultValue": 1023
    },

    "dataDiskID": {
      "metadata": {
        "Description": "The ID of the Data Disk"
      },
      "type": "int"
    }
  },

  "variables": {

  },

  "resources": [
    {
      "apiVersion": "[parameters('globals').apiVersion.virtualMachine]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "storageProfile": {
          "dataDisks": [
            {
              "name": "[concat(parameters('vmName'), '-datadisk-', parameters('dataDiskID'))]",
              "diskSizeGB": "[parameters('sizeOfDataDiskInGB')]",
              "lun": "[parameters('dataDiskID')]",
              "vhd": {
                "uri": "[concat('http://', parameters('storageAccount'), '.blob.core.windows.net/', parameters('globals').vhdContainerName, '/', parameters('vmName'),'-Data', parameters('dataDiskID'),'.vhd')]"
              },
              "createOption": "Empty"
            }
          ]
        }
      }
    },

    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'), '/DiskInitialize')]",
      "apiVersion": "[parameters('globals').apiVersion.extension]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[parameters('vmName')]"
      ],
      "properties": {
        "type": "CustomScriptExtension",
        "typeHandlerVersion": "1.4",
        "publisher": "Microsoft.Compute",
        "settings": {
          "fileUris": [
            "[parameters('globals').customScript.diskInitialize.scriptURL]"
          ],
          "commandToExecute": "[parameters('globals').customScript.diskInitialize.commandToExecute]"
        }
      }
    }
  ]
}