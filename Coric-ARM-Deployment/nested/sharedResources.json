{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",

  "parameters": {
    "globals": {
      "type": "object",
      "metadata": {
        "Description": "Global complex object passed to nested templates"
      }
    }
  },

  "variables": {
    "domainControllers": {
      "basename": "[concat(parameters('globals').baseName, '-dc')]",
      "adminUsername": "[parameters('globals').adminUsername]",
      "adminPassword": "[parameters('globals').adminPassword]",
      "privateIPAllocationMethod": "Dynamic",
      "numberOfVMs": 2,
      "windowsOSVersion": "[parameters('globals').windowsOSVersion]",
      "size": "Standard_A0",
      "sizeOfDataDiskInGB": 1000,
      "storageAccount": "[parameters('globals').storageAccountAdmin]",
      "subnet": "[parameters('globals').networkSettings.subnet2.name]"
    },
    "rdsGateway": {
      "basename": "[concat(parameters('globals').baseName, '-rdg')]",
      "adminUsername": "[parameters('globals').adminUsername]",
      "adminPassword": "[parameters('globals').adminPassword]",
      "privateIPAllocationMethod": "Dynamic",
      "numberOfVMs": 1,
      "windowsOSVersion": "[parameters('globals').windowsOSVersion]",
      "size": "Standard_A0",
      "sizeOfDataDiskInGB": null,
      "storageAccount": "[parameters('globals').storageAccountAdmin]",
      "subnet": "[parameters('globals').networkSettings.subnet4.name]"
    }
  },

  "resources": [
    {
      "name": "adminStorage",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[parameters('globals').apiVersionDeployments]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('globals').storageAccountTemplateLink]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "globals": {
            "value": "[parameters('globals')]"
          },
          "Name": {
            "value": "[parameters('globals').storageAccountAdmin]"
          }
        }
      }
    },

    {
      "name": "diagnosticsStorage",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[parameters('globals').apiVersionDeployments]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('globals').storageAccountTemplateLink]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "globals": {
            "value": "[parameters('globals')]"
          },
          "Name": {
            "value": "[parameters('globals').storageAccountDiagnostics]"
          }
        }
      }
    },

    {
      "name": "networkSetup",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[parameters('globals').apiVersionDeployments]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('globals').networkTemplateLink]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "globals": {
            "value": "[parameters('globals')]"
          }
        }
      }
    },

    {
      "name": "domainControllersSetup",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[parameters('globals').apiVersionDeployments]",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'networkSetup')]",
        "[concat('Microsoft.Resources/deployments/', 'diagnosticsStorage')]",
        "[concat('Microsoft.Resources/deployments/', 'adminStorage')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('globals').vmDataDiskTemplateLink]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "globals": {
            "value": "[parameters('globals')]"
          },
          "machineSettings": {
            "value": "[variables('domainControllers')]"
          }
        }
      }
    },

    {
      "name": "rdsGatewaySetup",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[parameters('globals').apiVersionDeployments]",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'domainControllersSetup')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('globals').vmNoDataDiskTemplateLink]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "globals": {
            "value": "[parameters('globals')]"
          },
          "machineSettings": {
            "value": "[variables('rdsGateway')]"
          }
        }
      }
    }
  ]
}