{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",

  "parameters": {
    "clientID": {
      "metadata": {
        "description": "Unique ClientID for the system."
      },
      "type": "int"
    },
    "vnetName": {
      "metadata": {
        "description": "Name of the Virtual Network"
      },
      "type": "string"
    },
    "location": {
      "allowedValues": [ "East US", "West US", "North Europe", "West Europe", "East Asia", "South East Asia" ],
      "defaultValue": "North Europe",
      "metadata": {
        "description": "Location to deploy to"
      },
      "type": "string"
    }
  },

  "variables": {
    "addressPrefix": "[concat('10.', parameters('clientID'), '.0.0/16')]",
    "subnet2Name": "backend",
    "subnet2Prefix": "[concat('10.', parameters('clientID'), '.2.0/24')]",
    "subnet3Name": "user",
    "subnet3Prefix": "[concat('10.', parameters('clientID'), '.3.0/24')]",
    "subnet4Name": "frontend",
    "subnet4Prefix": "[concat('10.', parameters('clientID'), '.4.0/24')]"
  },

  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('addressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('subnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('subnet2Prefix')]"
            }
          },
          {
            "name": "[variables('subnet3Name')]",
            "properties": {
              "addressPrefix": "[variables('subnet3Prefix')]"
            }
          },
          {
            "name": "[variables('subnet4Name')]",
            "properties": {
              "addressPrefix": "[variables('subnet4Prefix')]"
            }
          }
        ]
      }
    }
  ],

  "outputs": {
    "vnetID": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetName'))]"
    }
  }
}